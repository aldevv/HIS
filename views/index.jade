  block personal_js
  script(src='js/navbar.js')
  block style


body
  nav.navbar.navbar-expand-custom.navbar-mainbg
    a.navbar-brand.navbar-logo(href="#") Navbar
    button.navbar-toggler(type="button",data-toggle="collapse", data-target="#navbarSupportedContent",aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
    .collapse.navbar-collapse(id="navbarSupportedContent")
        ul.navbar-nav.ml-auto
            .hori-selector
              .left
              .right
            li.nav-item(id="user-nav-item")
                a.nav-link(href="/user")<i class="fas fa-user"></i>Users
            li.nav-item.active(id="stay-nav-item")
                a.nav-link(href="/stay")<i class="fas fa-hospital"></i> Stays
  .container-xl
    .table-responsive
      .table-wrapper
        .table-title
          .row
            .col-sm-6
              block table-title
            .col-sm-6
              block add-entity
              block remove-entity
        table.table.table-striped.table-bordered.table-sm(id="table-id")
          thead
            tr
              th
                span.custom-checkbox
                  input(type='checkbox',id='selectAll')
                  label(for='selectAll')   
              block table-attributes-names    
          tbody
            block table
        .clearfix
          //.hint-text Showing <b>5</b> out of <b>25</b> entries
          ul.pagination
            //li.page-item  <a href='#'class='page-link'>Previous</a>
            - for (var x=1; x<5; x++)
              block pagination-numbers
            //li.page-item <a href='#' class='page-link'>Next</a>
  block add-edit-modal
  <!-- Delete Modal HTML -->
  #deleteModal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          block delete-modal-title
          button.close(type='button',data-dismiss='modal',aria-hidden='true')&times;

        .modal-body
          p Are you sure you want to delete these Records?
          p.text-warning <small>This action cannot be undone.</small>

        .modal-footer
          a.btn.btn-default(data-dismiss='modal') Cancel
          a.btn.btn-danger(id="delete-button") Delete              
  
